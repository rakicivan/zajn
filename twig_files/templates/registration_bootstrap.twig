<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12 centerText">
                <span class="h1">Registracija</span>
                <hr/>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {% for message in messages %}
                    <p>{{message}}</p>    
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form method="post" action="entry.php" id="frmRegister">
                    <input hidden="hidden" type="text" value="1" name="isRegistration" />
                    <div class="form-group row" id="register_type">
                        <div class="col-lg-6" >
                            <label><input type="radio" name="register_type" id="register_type_student" checked="checked" value="1">Student</label>
                        </div>
                        <div class="col-lg-6">
                            <label><input type="radio" name="register_type" id="register_type_company" value="0"> Tvrtka</label>
                        </div>
                    </div>
                    <hr/>
                    <div id="student_registration">
                        {% include 'registration.student.twig' %}
                    </div>
                    <div id="company_registration">
                        {% include 'registration.company.twig' %}
                    </div>   
                </form>
            </div>
        </div>
    </div>
</div>
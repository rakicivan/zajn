<div class="box" id="post" data={{post_ID}}>
    <span class="del_post">X</span>
    <div class="row">
        <div class="col-sm-2">
            <div class="user_avatar"><img class="center-block img-circle" src="{{user_avatar}}" /></div>
        </div>
        <div class="col-sm-10">
            <div class="post_author_name">{{author_name}} {{author_surname}}</div>
            <div class="post_text"><pre>{{text}}</pre></div>
            <div class="post_time">{{time}}</div>
        </div>
    </div>
    <div class="row">
        <div class="c_container">
            <div class="post_comments_container">
                <div class="c_c"></div>
            </div>
            <div class="post_comment_textarea_container">
                <form>
                    <textarea class="post_comment_textarea" placeholder="NapiÅ¡i komentar..."></textarea>
                </form>
            </div>
            <div class="load_post_comments"><span>Load comms</span></div>
        </div>
    </div>
</div>